{
  "name": "botc-script-builder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup": "node setup/generate-script-schema.ts && node setup/download-role-icons.ts && node setup/generate-edition-scripts.ts",
    "validate": "node setup/ensure-characters-in-metadata.ts",
    "dev": "vite",
    "build": "vite build",
    "full-build": "npm run setup && npm run build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.1.1",
    "@tsconfig/svelte": "^5.0.4",
    "json-schema-to-typescript": "^15.0.4",
    "p-queue": "^8.1.0",
    "svelte": "^5.38.0",
    "svelte-check": "^4.2.2",
    "typescript": "~5.9.2",
    "vite": "^7.1.1"
  },
  "dependencies": {
    "@lucide/svelte": "^0.539.0",
    "@thisux/sveltednd": "^0.0.20",
    "zod": "^4.0.16"
  }
}
